@using ArtigosCientificos.App.Models.Register
@model RegisterDTO

@{
    ViewData["Title"] = "Register Page";
}

<div class="h-screen flex items-center justify-center overflow-hidden">
    <div class="bg-white shadow-md rounded-lg w-full max-w-md p-8 max-h-screen overflow-auto">
        <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">Register</h2>
        <form asp-action="Index" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-sm text-red-600"></div>

            <div>
                <label asp-for="Username" class="block text-sm font-medium text-gray-600 mb-1">Username</label>
                <input asp-for="Username" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-400 focus:outline-none" />
                <span asp-validation-for="Username" class="text-xs text-red-600"></span>
            </div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-600 mb-1">Email</label>
                <input asp-for="Email" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-400 focus:outline-none" />
                <span asp-validation-for="Email" class="text-xs text-red-600"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-600 mb-1">Password</label>
                <input asp-for="Password" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-400 focus:outline-none" />
                <span asp-validation-for="Password" class="text-xs text-red-600"></span>
            </div>

            <div>
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-600 mb-1">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-400 focus:outline-none" />
                <span asp-validation-for="ConfirmPassword" class="text-xs text-red-600"></span>
            </div>

            <div>
                <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition duration-200">
                    Register
                </button>
            </div>
        </form>

        <div class="text-sm text-center text-gray-500 mt-6">
            Already have an account?
            <a href="/Login" class="text-blue-500 hover:underline">Log in</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
