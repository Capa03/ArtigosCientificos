@using ArtigosCientificos.App.Models.User
@model UserDTO

@{
    ViewData["Title"] = "Login Page";
}

<div class="min-h-screen bg-gray-100 flex items-center justify-center overflow-hidden">
    <div class="bg-white shadow-md rounded-lg w-full max-w-md p-8 max-h-screen overflow-auto">
        <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">Login</h2>
        <form asp-action="Index" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-sm text-red-600"></div>

            <div>
                <label asp-for="Username" class="block text-sm font-medium text-gray-600 mb-1"></label>
                <input asp-for="Username" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-400 focus:outline-none" />
                <span asp-validation-for="Username" class="text-xs text-red-600"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-600 mb-1"></label>
                <input asp-for="Password" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-400 focus:outline-none" />
                <span asp-validation-for="Password" class="text-xs text-red-600"></span>
            </div>

            <div>
                <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition duration-200">
                    Login
                </button>
            </div>
        </form>

        <div class="text-sm text-center text-gray-500 mt-6">
            Don't have an account?
            <a href="/Register" class="text-blue-500 hover:underline">Sign up</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
