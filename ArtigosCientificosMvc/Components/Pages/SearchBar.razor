<nav class="navbar navbar-expand-lg navbar-light bg-light">
	<a class="navbar-brand" href="/Home">Scientific Platform</a>
	<div class="collapse navbar-collapse" id="navbarNav">
		<form class="form-inline ml-auto" method="get" action="/Search" style="width: 90%;">
			<div class="input-group" style="flex-grow: 1;">
				<!-- Search Bar -->
				<input type="text" name="query" class="form-control"
					   placeholder="Search articles..." style="width: 60%;" />
				<!-- Filters Button -->
				<button class="btn btn-outline-secondary" type="button"
						id="filtersToggle" onclick="toggleFilters()">
					Filters
				</button>
				<!-- Full-Screen Filters -->
				<div id="filtersMenu" class="filters-overlay">
					<div class="filters-content">
						<h3>Filters</h3>
						<label for="category">Category</label>
						<select name="category" id="category" class="form-control mb-2">
							<option value="">All Categories</option>
							<option value="biology">Biology</option>
							<option value="physics">Physics</option>
						</select>
						<label for="author">Author</label>
						<select name="author" id="author" class="form-control mb-2">
							<option value="">All Authors</option>
							<option value="author1">Author 1</option>
							<option value="author2">Author 2</option>
						</select>

						<label>Date Range</label>
						<div class="date-range-container">
							<input type="date" name="startDate" id="startDate" class="form-control mb-2" placeholder="Start Date" />
							<input type="date" name="endDate" id="endDate" class="form-control mb-3" placeholder="End Date" />
						</div>

						<label for="views">Views</label>
						<select name="views" id="views" class="form-control mb-2">
							<option value="">None</option>
							<option value="author1">Most Viewed</option>
							<option value="author2">Least Viewed</option>
						</select>

						<label for="downloads">Downloads</label>
						<select name="downloads" id="downloads" class="form-control mb-2">
							<option value="">None</option>
							<option value="author1">Most Downloaded</option>
							<option value="author2">Least Downloded</option>
						</select>
						<label></label>

						<button type="button" class="btn btn-secondary" onclick="toggleFilters()">Close</button>
						<button type="submit" class="btn btn-primary ml-2">Apply Filters</button>
					</div>
				</div>
				<!-- Search Button -->
				<div class="input-group-append">
					<button type="submit" class="btn btn-primary">Search</button>
				</div>
			</div>
		</form>
		<!--

		<div class="input-group-append">
